<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TALPA | @ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/header.css" asp-append-version="true" />

</head>
<body>
    <header class="navbar navbar-expand-sm navbar-light bg-white sticky-top">
        <div class="container-xxl">
            <a class="navbar-brand my-3" href="/uitje">
                <img src="~/images/talpa.png" alt="TALPA" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Page"]=="Uitje"? "active" : "")" href="/uitje">Uitje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Page"]=="Suggesties"? "active" : "")" href="/suggesties">Suggesties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Page"]=="Stemmen"? "active" : "")" href="/stemmen">Stemmen</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-capitalize" id="navbarDropdown" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                            @ViewBag.Employee.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li class="dropdown-item dropdown-item-nav disabled text-capitalize">Naam: @ViewBag.Employee.Name</li>
                            <li class="dropdown-item dropdown-item-nav disabled">Email: @ViewBag.Employee.Email</li>
                            <li class="dropdown-item dropdown-item-nav disabled">Punten: @ViewBag.Employee.Points</li>
                            <li class="dropdown-item dropdown-item-nav disabled text-capitalize">Team: @ViewBag.Employee.Team</li>
                            <li class="dropdown-item dropdown-item-nav disabled text-capitalize">Rol: @ViewBag.Employee.Role</li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item dropdown-item-nav" href="/uitloggen">Uitloggen</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="position-absolute end-0 m-2">
            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                <div>
                    @ViewBag.Message
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="position-absolute end-0 m-2">
            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16"><path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" /></svg>
                <div>
                    @ViewBag.ErrorMessage
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <div class="container my-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <audio id="alertSound" src="~/sounds/alertSound.wav" preload="auto"></audio>
</body>
</html>