<script>
    function searchEmployees() {
        // Verkrijg de waarde van de zoekbalk
        var input = document.getElementById('searchInput');
        var filter = input.value.toUpperCase();

        // Verkrijg alle rijen met de class 'employee'
        var rows = document.querySelectorAll('.employee');

        // Loop door elke rij en verberg degene die niet overeenkomen met de zoekterm
        rows.forEach(function (row) {
            var nameCell = row.querySelector('.tableRow');
            var nameText = nameCell.textContent || nameCell.innerText;
            if (nameText.toUpperCase().indexOf(filter) > -1) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });

        // Sorteer de tabel op basis van de ingevoerde naam
        var table = document.querySelector('.table');
        var sortedRows = Array.from(rows).sort(function (a, b) {
            var nameA = a.querySelector('.tableRow').textContent.trim().toUpperCase();
            var nameB = b.querySelector('.tableRow').textContent.trim().toUpperCase();
            if (nameA < nameB) return -1;
            if (nameA > nameB) return 1;
            return 0;
        });
        table.tBodies[0].append(...sortedRows);

        // Bereken totaal aantal punten
        var totalPoints = 0;
        rows.forEach(function (row) {
            if (row.style.display !== "none") {
                var points = parseInt(row.querySelector('td:nth-child(3)').textContent);
                totalPoints += points;
            }
        });
        document.getElementById('totalPoints').textContent = totalPoints;
    }
</script>

