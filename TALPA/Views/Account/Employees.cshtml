@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Manager Dashboard";
}

@{
    int totalPoints = 0;
    int totalSuggestionsSelected = 0;
    int totalSuggestionVoted = 0;
    int totalSuggestionChosen = 0;
}

<nav class="navbar navbar-expand-lg navbar-light bg-light py-3 px-lg-5 w-100">
    <a class="navbar-brand pl-lg-5" href="#">
        <img src="~/images/cgi.svg" class="brand pl-lg-5" height="35" alt="">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0 pr-lg-5">
            <li class="nav-item active pr-lg-3 pl-lg-3">
                <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item active pr-lg-3 pl-lg-3">
                <a class="nav-link currentPage">Mijn Team</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0 pr-lg-5">
            <li class="nav-item active pr-lg-5">
                <div class="dropdown">
                    <a class="nav-link active text-capitalize" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                        @Model.UserProfile.UserName
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                        <li>
                            <div class="row mx-3 d-flex align-items-center mb-2">
                                <div class="col-1 p-0 align-middle">
                                    <h3 class="mb-0"><i class="bi bi-person-circle align-middle"></i></h3>
                                </div>
                                <div class="col p-0">
                                    <p class="mb-0 ml-3 text-capitalize">@Model.UserProfile.UserName</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="row mx-3 d-flex align-items-center mb-2">
                                <div class="col-1 p-0 align-middle">
                                    <h3 class="mb-0"><i class="bi bi-envelope-at align-middle"></i></h3>
                                </div>
                                <div class="col p-0">
                                    <p class="mb-0 ml-3">@Model.UserProfile.EmailAddress</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="row mx-3 d-flex align-items-center mb-2">
                                <div class="col-1 p-0 align-middle">
                                    <h3 class="mb-0"><i class="bi bi-building-gear align-middle"></i></h3>
                                </div>
                                <div class="col p-0">
                                    <p class="mb-0 ml-3">@Model.UserProfile.Role</a>
                                </div>
                            </div>
                        </li>
                        <hr class="my-0 mb-1">
                        <li><a class="nav-link active px-3 mb-0" href="/account/logout">Afmelden</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div class="corner corner-rt position-absolute d-none d-xl-block"></div>
<div class="corner corner-lb position-absolute d-none d-xl-block"></div>

<div class="container-fluid main d-flex flex-column justify-content-center px-md-5">
    <div class="row">
        <h1 class="title">Mijn Team</h1>
    </div>
    <div class="row content-row h-75">
        <div class="col-xl section m-3 p-3 shadow h-100 w-100 overflow-hidden">
            <h2 class="subtitle mb-3 d-block d-sm-inline">Medewerkers</h2>
            <div class="overflow-auto card2-text">
                <div class="container mb-3">
                    <input type="text" id="searchInput" onkeyup="searchEmployees()" class="form-control" placeholder="Zoeken naar medewerker...">
                </div>
                <table class="table table-striped table-borderless align-middle h-100 mb-0">
                    <thead class="sticky-top top-0">
                        <tr class="bg-white">
                            <th scope="col" class="w-25">Naam</th>
                            <th scope="col" class="text-center">Email</th>
                            <th scope="col" class="text-center">Punten</th>
                            <th scope="col" class="text-center">Suggesties Geselecteerd</th>
                            <th scope="col" class="text-center">Suggestie Stemmen</th>
                            <th scope="col" class="text-center">Suggesties Gekozen</th>
                        </tr>
                        <tr class="tableLine">
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            
                            totalPoints += @employee.Points;
                            totalSuggestionsSelected += @employee.SuggestionsSelected;
                            totalSuggestionVoted += @employee.SuggestionVoted;
                            totalSuggestionChosen += @employee.SuggestionChosen;
                            
                            <tr>
                                <th scope="row" class="tableRow">@employee.Name</th>
                                <td>@employee.Email</td>
                                <td>@employee.Points</td>
                                <td>@employee.SuggestionsSelected</td>
                                <td>@employee.SuggestionVoted</td>
                                <td>@employee.SuggestionChosen</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-white fixed-bottom bottom-0 position-sticky">
                        <tr class="tableLine">
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                        </tr>
                        <tr>
                            <th scope="col" class="w-25">Totaal</th>
                            <th scope="col" class="text-center"></th>
                            <th scope="col" class="text-center">@totalPoints</th>
                            <th scope="col" class="text-center">@totalSuggestionsSelected</th>
                            <th scope="col" class="text-center">@totalSuggestionVoted</th>
                            <th scope="col" class="text-center">@totalSuggestionChosen</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="changeDeadline" tabindex="-1" aria-labelledby="changeDeadlineLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="Activity" asp-action="changeDeadline" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header justify-content-center">
                        <h5 class="modal-title" id="changeDeadlineLabel">Deadline Aanpassen</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="dateInput">Deadline</label>
                            <input type="text" class="form-control py-4 scrollInput" id="dateInput" placeholder="Selecteer Een Dag" disabled>
                            <input type="text" id="hiddenDateInput" name="DeadlineDate" hidden>
                        </div>
                        <div id="datepicker" class="d-flex justify-content-center text-center"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-close" data-dismiss="modal">Annuleer</button>
                        <button type="submit" class="btn">Deadline Aanpassen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="~/scripts/multiSelectManager.js"></script>
<script src="~/scripts/calendarManager.js"></script>