<div class="corner corner-lb position-absolute d-none d-xl-block"></div>

<div class="container-fluid main d-flex flex-column justify-content-center px-md-5">
    <div class="row">
        <h1 class="title">Nieuwe Stemming Maken</h1>
    </div>
    <div class="row content-row h-75">
        <div class="col-xl section m-3 p-3 shadow h-100 w-100 overflow-hidden">
            <h2 class="subtitle mb-3 d-block d-sm-inline">Activiteiten</h2>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control py-4 input-long" id="activitySearch" placeholder="Zoek een activiteit">
                </div>
                <div class="col-4">
                    <select class="form-select" id="CategoryFilter" data-placeholder="Filter kenmerken" multiple>
                        <option>Mobility</option>
                        <option>Time</option>
                        <option>Intellect</option>
                        <option>GroupSize</option>
                        <option>Age</option>
                        <option>Height</option>
                        <option>Diet</option>
                        <option>Allergy</option>
                        <option>Phobia</option>
                    </select>
                </div>
                <div class="col-4">
                    <select class="form-select" id="RestrictionFilter" data-placeholder="Filter beperkingen" multiple>
                        <option>Mobility</option>
                        <option>Time</option>
                        <option>Intellect</option>
                        <option>GroupSize</option>
                        <option>Age</option>
                        <option>Height</option>
                        <option>Diet</option>
                        <option>Allergy</option>
                        <option>Phobia</option>
                    </select>
                </div>
            </div>
            <div class="overflow-auto card2-text">
                <table class="table table-striped table-borderless align-middle h-100 mb-0 w-100 activityTable">
                    <thead class="sticky-top top-0">
                        <tr class="bg-white">
                            <th scope="col" class="w-t1">Naam</th>
                            <th scope="col" class="text-center">Beschrijving</th>
                            <th scope="col" class="text-center">Kenmerken</th>
                            <th scope="col" class="text-center">Beperkingen</th>
                        </tr>
                        <tr class="tableLine">
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                            <th class="p-0"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.Activities)
                        {
                            <tr>
                                <th scope="row" class="tableRow ellipsis">@activity.Name</th>
                                <td class="ellipsis">@activity.Description</td>
                                <td>
                                    <h5>
                                        @foreach (var catogory in @activity.Categories)
                                        {
                                            <span class="badge badge-secondary">@catogory</span>
                                        }
                                    </h5>
                                </td>
                                <td>
                                    <h5>
                                        @foreach (var restriction in @activity.Restrictions)
                                        {
                                            <span class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="@restriction.Description">@restriction.Name</span>
                                        }
                                    </h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="changeDeadline" tabindex="-1" aria-labelledby="changeDeadlineLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="Activity" asp-action="changeDeadline" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header justify-content-center">
                        <h5 class="modal-title" id="changeDeadlineLabel">Deadline Aanpassen</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="dateInput">Deadline</label>
                            <input type="text" class="form-control py-4 scrollInput" id="dateInput" placeholder="Selecteer Een Dag" disabled>
                            <input type="text" id="hiddenDateInput" name="DeadlineDate" hidden>
                        </div>
                        <div id="datepicker" class="d-flex justify-content-center text-center"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-close" data-dismiss="modal">Annuleer</button>
                        <button type="submit" class="btn">Deadline Aanpassen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

